<div id="Options">
    <div class="container">
        <span>port</span>
        <input id="setport" type="text">
    </div>
</div>
<style>
    #Options {
        display: none;
        width: 100%;
        height: 100%;
        position: absolute;
        background-color: #2e2c28;
        z-index: 9;
    }
    #setport{
        height: fit-content;
    }
</style>

<script>
    window.addEventListener("DOMContentLoaded", async () => {

        $("#setport").change(function (e) { 
            e.preventDefault();

                api.send("set:options", ["port", $(this).val()])
            
        });
    })
</script>