{
    "productName": "SCLanPad",
    "appId": "sclanpad",
    "files": [
        "**/*",
        {
            "from": "app",
            "to": "app",
            "filter": [
                "**/*"
            ]
        }
    ],
    "extraFiles": [
        {
            "from": "app/public",
            "to": "public",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "app/exemples",
            "to": "public/exemples",
            "filter": [
                "**/*"
            ]
        }
    ],
    "win": {
        "target": "nsis",
        "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
        "oneClick": true,
        "perMachine": true
    }
}